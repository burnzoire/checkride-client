{
  "name": "checkride-client",
  "version": "0.2.3",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "electron .",
    "dist": "electron-builder",
    "release": "electron-builder --publish=always",
    "release:tag": "bash scripts/release.sh"
  },
  "engines": {
    "node": "^20.12.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!demo/**",
      "!jest.config.js",
      "!babel.config.js",
      "!index.js",
      "!main.js",
      "!__tests__/**",
      "!**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/burnzoire/checkride-client.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/burnzoire/checkride-client/issues"
  },
  "homepage": "https://github.com/burnzoire/checkride-client#readme",
  "build": {
    "appId": "com.burnzoire.checkride",
    "productName": "Checkride Client",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "files": [
      "**/*",
      "!**/__tests__/**",
      "!**/*.test.js",
      "!**/*.test.js.skip",
      "!**/*.map",
      "!coverage/**"
    ],
    "extraResources": [
      {
        "from": "../Scripts/Hooks/DCS-Checkride-hook.lua",
        "to": "dcs/Scripts/Hooks/DCS-Checkride-hook.lua"
      },
      {
        "from": "../DCS-Checkride/Scripts/DCS-CheckrideGameGUI.lua",
        "to": "dcs/Mods/Services/Checkride/Scripts/DCS-CheckrideGameGUI.lua"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "electron-builder": "^24.13.3",
    "electron": "^40.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.12.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nock": "^14.0.10"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "uuid": "^8.3.2"
  }
}
